<p>结算</p>
<table>
	<tr>
		<td>商品</td>
		<td>单价</td>
		<td>数量</td>
	</tr>
	<% @order_form.order_items.each do |order_item| %>
			<tr>
				<td><%= order_item.item.name %></td>
				<td><%= order_item.item.price %></td>
				<td><%= order_item.item_count %></td>
			</tr>
	<% end %>
</table>
<p>总价： <%= @order_form.total %></p>
<p>订单编号： <%= @order_form.id %></p>
